@page
@model Szkolenia.Pages.Trainers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table id="trainersTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trainer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrainerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrainerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrainerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

                
@section scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#trainersTable').DataTable({
                "order": []
            });
        });
    </script>
}